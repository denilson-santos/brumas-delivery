<div class="tab-pane fade pt-0" id="pills-change-password" role="tabpanel" aria-labelledby="pills-change-password-tab">
    <div class="card">
        <div class="card-header flex-column align-items-start">
            <h5>Alterar Senha</h5>

            <div class="server-validation">
                <a href="javascript:void(0)" data-toggle="tooltip" data-placement="bottom" data-html="true" data-original-title=""><i class="fas fa-exclamation-circle"></i> Informações incorretas!</a>  
            </div>
        </div>

        <div class="card-body pt-0">
            <div class="form-row">
                <div class="form-group col-4 mb-0">
                    <label for="accountOldPassword">Senha Antiga</label>
                    <input type="password" id="accountOldPassword" class="form-control change-password" name="accountOldPassword" placeholder="Digite a senha antiga">
                </div>

                <div class="form-group col-4 mb-0">
                    <label for="accountNewPassword">Nova Senha</label>
                    <input type="password" id="accountNewPassword" name="accountNewPassword" class="form-control change-password" placeholder="Digite a nova senha">
                </div>

                <div class="form-group col-4 mb-0">
                    <label for="accountConfirmNewPassword">Confirmar Nova Senha</label>
                    <input type="password" id="accountConfirmNewPassword" name="accountConfirmNewPassword" class="form-control change-password" placeholder="Digite a nova senha novamente">
                </div>

                <a href="#" class="mb-3 ml-1" href="">Esqueceu a senha ?</a>
            </div>

            <button type="submit" class="btn btn-primary submit-profile float-right" disabled>
                Salvar
            </button>
        </div>
    </div>    
</div>