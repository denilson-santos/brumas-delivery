<div class="modal fade" id="showPlate" tabindex="-1" role="dialog" aria-labelledby="showPlate" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="spinner-container">
                <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>

            <div class="modal-header">
                <div class="content">
                    <h5 class="modal-title"></h5>
                    <p class="modal-subtitle"></p>
                </div>

                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body row no-gutters">
                <div class="plate-image col mr-3">
                    <img src="" alt="" class="d-none">
                </div>
            
                <div class="plate-content col-7">
                    <div class="info">
                        <div class="plate-price">R$ <span></span></div>
                        <div class="restaurant-name"><i class="fas fa-store mr-2"></i>{{ restaurantInfo['name'] }}</div>
                    </div>
                    
                    <div class="complements"></div>

                    <div class="add-to-cart"></div>
                </div>
            </div>

            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-secondary text-white" data-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary" id="addCart" data-dismiss="modal" disabled>
                    <i class="fas fa-plus mr-1"></i>
                    Adicionar ao Carrinho
                    <strong class="ml-3">R$ <span>0,00</span></strong>
                </button>
            </div>
        </div>
    </div>
</div>